unit unit_configurar_servidor;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.Imaging.pngimage,
  Vcl.Buttons, Vcl.StdCtrls;

type
  Tform_configurar_servidor = class(TForm)
    Shape1: TShape;
    Panel4: TPanel;
    Panel1: TPanel;
    Panel2: TPanel;
    Panel3: TPanel;
    Image1: TImage;
    LinkLabel1: TLinkLabel;
    LinkLabel2: TLinkLabel;
    Panel5: TPanel;
    btn_confirmar: TSpeedButton;
    Panel6: TPanel;
    SpeedButton1: TSpeedButton;
    LinkLabel3: TLinkLabel;
    LinkLabel4: TLinkLabel;
    Shape2: TShape;
    Shape3: TShape;
    ed_caminho: TEdit;
    ed_nome_banco: TEdit;
    ed_login: TEdit;
    ed_senha: TEdit;
    ed_porta: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    ed_nome_banco_atual: TEdit;
    ed_caminho_atual: TEdit;
    ed_login_atual: TEdit;
    Label8: TLabel;
    Label9: TLabel;
    ed_senha_atual: TEdit;
    Label10: TLabel;
    ed_porta_atual: TEdit;
    procedure SpeedButton1Click(Sender: TObject);
    procedure btn_confirmarClick(Sender: TObject);
  private
    { Private declarations }
    procedure ValidarObrigatoriedade;
  public
    { Public declarations }
  end;

var
  form_configurar_servidor: Tform_configurar_servidor;

implementation

{$R *.dfm}

procedure Tform_configurar_servidor.btn_confirmarClick(Sender: TObject);
begin
  ValidarObrigatoriedade;
end;

procedure Tform_configurar_servidor.SpeedButton1Click(Sender: TObject);
begin
  Close;
end;

procedure Tform_configurar_servidor.ValidarObrigatoriedade;
begin
  if (ed_caminho.Text = '') then
  begin
    Showmessage('Caminho do Banco é obrigatório.');
    ed_caminho.SetFocus;
  end;

  if (ed_nome_banco.Text = '') then
  begin
    Showmessage('Nome do Banco é obrigatório.');
    ed_nome_banco.SetFocus;
  end;

  if (ed_login = '') then
  begin
    Showmessage('Login é obrigatório.');
    ed_login.SetFocus;
  end;

  if (ed_senha = '') then
  begin
    Showmessage('Senha é obrigatória.');
    ed_senha.SetFocus;
  end;

  if (ed_porta = '') then
  begin
    Showmessage('Porta é obrigatória.');
    ed_porta.SetFocus;
  end;
end;

end.
